#include <iostream>
#include <string>
using namespace std;


enum enPassFail { Pass = 1, Fail = 2 };


void ReadMarks(int& Mark1,int& Mark2, int& Mark3)
{
	cout << "Please Enter Mark 1 :" << endl;
	cin >> Mark1;

	cout << "Please Enter Mark 2 :" << endl;
	cin >> Mark2;

	cout << "Please Enter Mark 3 :" << endl;
	cin >> Mark3;
}

int SumOf3Marks(int Mark1, int Mark2, int Mark3)
{
	
	return Mark1 + Mark2 + Mark3;

}
float CalculateAverage(int Mark1, int Mark2, int Mark3)
{

	return (float)SumOf3Marks(Mark1, Mark2, Mark3) / 3;

}



enPassFail finalResult(int Average)
{
	if (Average >= 50)
		return enPassFail::Pass;
	else
		return enPassFail::Fail;

}


void PrintResult(int Average)
{
	cout << " the Average of three Mark is :" << Average;

	if (finalResult(Average) == enPassFail::Pass)
		cout << "\n You passed :-) ";
	else
		cout << "\n You failed :-( ";

}



int main()
{
	int Mark1, Mark2, Mark3;
	ReadMarks(Mark1, Mark2, Mark3);
	PrintResult(CalculateAverage(Mark1, Mark2, Mark3));
	finalResult(CalculateAverage(Mark1, Mark2, Mark3));
}
