#include <iostream>
#include <string>
using namespace std;


int ReadNumber()
{
	int num;

	cout << "please enter number : " << endl;
	cin >> num;

	return num;
}

float CalculateHalfOfNumber(int num)
{
	return (float)num / 2;
}

void printResult(int num)
{
	string Result = "\n The Half of " + to_string(num) + " is " + to_string(CalculateHalfOfNumber(num));
	cout << endl << Result << endl;

}

int main()
{
	
	printResult(ReadNumber());

	return 0;
}
