#include <iostream>
#include <string>
#include <cmath>
using namespace std;



float ReadNumbers()
{
	float d;
	cout << "Please Enter diameter  :" << endl;
	cin >> d;
	return d;
	
}


float calculateArea(float d)
{
	const float pi = 3.14;
	float result = ( pi * pow(d, 2) ) / 4;
	return result;
	
}

void PrintArea(float area)
{
	cout << " The Area is :" << area << endl;

	
}

int main()
{
	
	
		PrintArea(calculateArea(ReadNumbers()));

		return 0;
}
