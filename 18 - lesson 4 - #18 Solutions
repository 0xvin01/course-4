#include <iostream>
#include <string>
#include <cmath>
using namespace std;



float ReadNumbers()
{
	float r;
	cout << "Please Enter r  :" << endl;
	cin >> r;
	return r;
	
}


float calculateArea(float r)
{
	const float pi = 3.14;
	float result = pi * pow(r, 2);
	return result;
	
}

void PrintArea(float area)
{
	cout << " The Area is :" << area << endl;

	
}

int main()
{
	
	
		PrintArea(calculateArea(ReadNumbers()));

		return 0;
}
