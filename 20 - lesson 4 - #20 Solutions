#include <iostream>
#include <string>
#include <cmath>
using namespace std;



float ReadNumbers()
{
	float a;
	cout << "Please Enter num  :" << endl;
	cin >> a;
	return a;
	
}


float calculateArea(float a)
{
	const float pi = 3.1415926535;
	float result = (pi * pow(a, 2)) / 4;
	return result;
	
}

void PrintArea(float area)
{
	cout << " The Area is :" << area << endl;

	
}

int main()
{
	
	
		PrintArea(calculateArea(ReadNumbers()));

		return 0;
}
